generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Email {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
}

model Admin {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String
  password String
}

model News {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  text  String
}

model Album {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  albumcover String
  songs      Song[]
}

model Song {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  spotify String
  apple   String
  amazon  String
  album   Album?  @relation(fields: [albumId], references: [id])
  albumId String? @db.ObjectId
}

model Vids {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  link  String
  file  String
}
